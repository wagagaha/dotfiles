# startship
export STARSHIP_CONFIG=~/.config/starship/zsh.toml
eval "$(starship init zsh)"

# >> alias
# main
alias cat="bat"
alias ls="eza --icons"
alias ll="ls -l"
alias lla="ls -al"
alias rm="rm -v -i"
alias cp="cp -v"

# git
alias gcm='export GPG_TTY=$(tty) && git commit -m'
alias gam="export GPG_TTY=$(tty) && git commit -am"
alias gck='git checkout'
alias ga="git add"
